rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // posts 컬렉션은 모두 읽기 가능, 서버에서만 쓰기 가능
    match /posts/{postId} {
      allow read: if true;
      allow write: if false;
    }
    
    // 기타 모든 문서는 차단
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

